<div class="container">
  <h1>All Restaurants</h1>
  <div id="restaurants">
    <% @restaurants.each do |restaurant| %>
        <h2>
        <%= restaurant.name %>
          </h2>
          <p><strong>Address:</strong>
            <%= restaurant.address %>
          </p>
          <p><strong>Rating:</strong>
            <%= restaurant.rating %>
          </p>
          <p>
            <%= link_to "Show this restaurant" , restaurant %>
          </p>
          <% end %>
  </div>
  <%= link_to "new restaurant" , new_restaurant_path%>
</div>